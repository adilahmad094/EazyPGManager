<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="7dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/guestImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="2dp"
                android:text="Date"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/guestImageView"
                app:layout_constraintTop_toBottomOf="@+id/guestFromTimeTextView" />

            <TextView
                android:id="@+id/guestNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/productsansmedium"
                android:text="Guest Name"
                android:textColor="#1A237E"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/guestImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tenantNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:text="Tenant Name"
                android:fontFamily="@font/productsans"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guestImageView" />

            <TextView
                android:id="@+id/guestFromTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="2dp"
                android:text="From Time"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/guestImageView"
                app:layout_constraintTop_toBottomOf="@+id/guestNameTextView" />

            <TextView
                android:id="@+id/guestToTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="To Time"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/guestNameTextView" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="->"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/guestFromTimeTextView"
                app:layout_constraintTop_toBottomOf="@+id/guestNameTextView" />

            <TextView
                android:id="@+id/guestContactTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:text="Guest Contact"
                android:fontFamily="@font/productsans"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tenantNameTextView" />

            <TextView
                android:id="@+id/tenantContactTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:text="Tenant Contact"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guestContactTextView"
                app:layout_constraintVertical_bias="0.51" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>